---
layout: layouts/base.njk
---
<section class="page-header">
  <div class="wrap">
    <h1>{{ title }}</h1>
    <p class="muted">Updates from the lab.</p>
  </div>
</section>
<section class="page-content">
  <div class="wrap news-academic">
    <ul class="news-list">
      {% for item in collections.news %}
        <li class="news-list__item">
          <div class="news-list__date">{{ item.date | readableDate }}</div>
          <div class="news-list__title">
            <a href="{{ item.url }}">{{ item.data.title }}</a>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>
